- if user_signed_in?
  %nav.bg-neutral-100.border-b-2.mb-5
    %div{ class: "flex justify-between items-center container mx-auto px-2 sm:px-0" }
      .flex.items
        %h1{ class: "text-xl font-bold px-2 sm:px-0" } Xpense
        .flex.items-center.ml-5
          = link_to root_path do
            = image_tag "icons/home.svg", alt: "home", class: "icon mr-3"
          = link_to user_path(current_user) do
            = image_tag "icons/profile.svg", alt: "profile", class: "icon"
      = button_to destroy_user_session_path, method: :delete do
        = image_tag "icons/sign_out.svg", alt: "sign out", class: "icon pt-1"
- else
  .bg-neutral-100.border-2.mb-5
    %div{ class: "flex justify-between items-center container mx-auto py-2 px-2 sm:px-0" }
      %h1.text-2xl.font-bold Xpense
