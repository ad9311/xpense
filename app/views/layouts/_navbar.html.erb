<div class="p-3 bg-blue-900 text-white">
  <% if user_signed_in? %>
    <div class="container mx-auto mb-3 flex items-center justify-between">
      <h1 class="text-2xl font-bold">Xpense</h1>
      <% className = "px-2 py-1 text-xs font-bold rounded-md bg-red-500 hover:bg-red-600 trans" %>
      <%= button_to "Sign out",  destroy_user_session_path, method: :delete, class: className %>
    </div>
    <div class="container mx-auto flex items-center justify-between">
      <p>
        <strong><%= current_user.full_name %></strong>
      </p>
      <% if @balance.positive? %>
        <div class="w-fit px-3 rounded-md bg-white">
          <p class="text-green-500" >
            <strong><%= format_value @balance %></strong>
          </p>
        </div>
      <% else %>
        <%= format_value @balance %>
      <% end %>
    </div>
  <% else %>
    <div class="container mx-auto flex items-center justify-between">
      <h1 class="text-2xl font-bold">Xpense</h1>
    </div>
  <% end %>
</div>
