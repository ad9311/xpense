<h3 class="mb-3 text-xl text-blue-700 font-bold">Add a transaction<h3>
<%= form_for Transaction.new do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Description" %>
  </div>
  <div class="field">
    <%= f.label :value %>
    <%= f.number_field :value, placeholder: 'Value', min: 0, step: 0.01 %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(format_enum(Transaction.categories), nil) %>
  </div>
  <div class="submit">
    <%= f.submit "Add" %>
  </div>
<% end %>
