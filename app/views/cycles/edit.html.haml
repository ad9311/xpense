.mb-5.flex.items-center
  = link_to root_path do
    = image_tag "icons/arrow_left.svg", alt: "back", class: "icon mr-2"
  %h2.text-xl.font-bold= "#{@cycle.month_year_string}"
%section.mt-3
  %h3.mb-1.font-bold Expense limit
  %ul.flex
    %li.link.mr-2
      = link_to "Edit", edit_cycle_expense_limit_path(@cycle, @expense_limit)
  .my-3.bg-neutral-100.border.p-2.text-income= number_to_currency(@expense_limit.amount)